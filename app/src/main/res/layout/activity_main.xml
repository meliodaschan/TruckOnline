<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="10"
    tools:context=".Activity.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"

        android:src="@drawable/vanchuyen" />



    <!--<TextView-->
    <!--android:layout_marginTop="30dp"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:textSize="30dp"-->
    <!--android:textColor="#fff"-->
    <!--android:text="CHÀO MỪNG BẠN ĐẾN VỚI ỨNG DỤNG CỦA CHÚNG TÔI"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"

        android:src="@drawable/vanchuyen3" />


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="2"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/boder_bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#FF5722"
            android:textStyle="bold|italic"
            android:text="BẠN MUỐN SỬ DỤNG DỊCH VỤ VỚI VAI TRÒ?"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />





    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnThemtaixe"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="CHỦ XE"
            android:background="@color/xanh"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btnThemkhachhang"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"


            android:layout_marginEnd="20dp"

            android:layout_weight="1"
            android:background="@color/xanh"
            android:text="CHỦ HÀNG"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

    </LinearLayout>




</LinearLayout>