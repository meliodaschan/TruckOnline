                    android:id="@+id/textViewTrongLuongHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   8 tấn"

                    />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
