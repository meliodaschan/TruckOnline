<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9DADB"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context="com.example.user.truckonlinetaixe.DangNhapActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/truck" />

    <EditText
        android:id="@+id/etBienSoXeDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:hint="Biển số xe "
        android:inputType="textPersonName"
        android:padding="10dp"
        android:drawableEnd="@drawable/iconcar"/>


    <EditText
        android:id="@+id/etPasswordDangNhapTX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:drawableEnd="@drawable/iconlock"/>

    <Button
        android:id="@+id/btnLoginTX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/xanh"
        android:text="Đăng nhập"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gach1"
            android:layout_marginTop="9dp"
            android:background="#aaa"
            android:layout_width="90dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/aaa"
            android:layout_toRightOf="@+id/gach1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="BẠN CHƯA CÓ TÀI KHOẢN ?́"
            android:textColor="#aaa" />
        <TextView
            android:layout_toEndOf="@+id/aaa"
            android:layout_marginTop="9dp"
            android:background="#aaa"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>




    <Button
        android:id="@+id/btnDangKyTX"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#aaa"
        android:text="Đăng ký"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>