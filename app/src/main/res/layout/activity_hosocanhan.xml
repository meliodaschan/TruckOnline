<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xam"
    android:orientation="vertical"

    tools:context="com.example.user.truckonlinetaixe.Activity.DangKyKHActivity">

    <include layout="@layout/toolbar_hosocanhan">

    </include>


    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtTenKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:hint="Tên khách hàng"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:drawableEnd="@drawable/person"/>

        <EditText
            android:id="@+id/edtDiaChiKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:hint="Địa chỉ "
            android:inputType="textPersonName"
            android:padding="10dp"
            android:drawableEnd="@drawable/iconhome"/>

        <EditText
            android:id="@+id/edtNamSinhKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:hint="Năm sinh"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:drawableEnd="@drawable/iconcalendar"/>

        <EditText
            android:id="@+id/edtSdtKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:hint="Số điện thoại"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:drawableEnd="@drawable/iconphone"/>





           <Button
               android:layout_marginTop="30dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:id="@+id/btnCapNhatKH"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/xanh"
               android:text="CẬP NHẬT"
               android:textColor="@android:color/white" />





    </LinearLayout>


</LinearLayout>