<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xam"
    android:orientation="vertical"

    tools:context="com.example.user.truckonlinetaixe.DangKyKHActivity">

    <include layout="@layout/toolbar_dangky"></include>


        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etTen_KH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Tên khách hàng"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableEnd="@drawable/person"/>

            <EditText
                android:id="@+id/etDiaChi_KH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Địa chỉ "
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconhome"/>

            <EditText
                android:id="@+id/etNamSinh_KH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Năm sinh"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconcalendar"/>

            <EditText
                android:id="@+id/etSDT_KH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Số điện thoại"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconphone"/>

            <EditText
                android:id="@+id/etUsernameDK_KH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Tên đăng nhập"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconaccount"/>


            <EditText
                android:id="@+id/etPasswordkh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconlock"/>

            <EditText
                android:id="@+id/etConfirmPasswordkh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp"
                android:drawableEnd="@drawable/iconunlock"/>

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnDangKyKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/xanh"
                android:text="ĐĂNG KÝ"
                android:textColor="@android:color/white" />

        </LinearLayout>


</LinearLayout>